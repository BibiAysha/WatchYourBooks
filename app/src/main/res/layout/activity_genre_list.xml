<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1A1927"
    tools:context="com.example.android.watchyourbooks.GenreList">
    <Button
        android:id="@+id/Romance"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Romance"
        android:background="#FECF12"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:onClick="OpenRomance"/>
    <Button
        android:id="@+id/Mystery"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Mystery"
        android:background="#A6E220"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Romance"
        android:onClick="OpenMystery"/>
    <Button
        android:id="@+id/Drama"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Drama"
        android:background="#01C1E8"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Mystery"
        android:onClick="OpenDrama"/>
    <Button
        android:id="@+id/Sci_Fi"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Sci_Fi"
        android:background="#D8214A"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Drama"
        android:onClick="OpenSciFi"/>
    <Button
        android:id="@+id/Political"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Political"
        android:background="#F95706"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Sci_Fi"
        android:onClick="OpenPolitical"/>
</RelativeLayout>
