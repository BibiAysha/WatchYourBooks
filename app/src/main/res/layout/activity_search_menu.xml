<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1A1927"
    tools:context="com.example.android.watchyourbooks.SearchMenu">

        <Button
            android:id="@+id/Genre"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:text="Genre"
            android:background="#F3E53B"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:onClick="OpenGenre"/>
        <Button
            android:id="@+id/trueOrder"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:text="Authors(A-Z)"
            android:background="#0BF142"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_below="@id/Genre"
            android:layout_centerHorizontal="true"
            android:onClick="OpenTrueOrder"/>
        <Button
            android:id="@+id/reverseOrder"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:text="Authors(Z-A)"
            android:background="#03E9FA"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_below="@id/trueOrder"
            android:layout_centerHorizontal="true"
            android:onClick="OpenReverseOrder"/>

</RelativeLayout>
